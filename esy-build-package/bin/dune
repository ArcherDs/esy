(executable
  (name esyBuildPackageCommand)
  (flags (:standard (-w -39)))
  (preprocess (pps ppx_let))
  (libraries
            EsyBuildPackage
            cmdliner
            yojson
            bos
            logs
            logs.fmt
            logs.cli
            re
            fmt
            fmt.cli
            fmt.tty
            ppx_deriving_yojson.runtime
            rresult
            )
  )

(rule
 (targets fastreplacestring.exe)
 (deps fastreplacestring.cpp)
 (action  (run "g++" "-Ofast" "-o" %{targets} "fastreplacestring.cpp"))
 )

(install
  (package esy-build-package)
  (section bin)
   (files
     (esyBuildPackageCommand.exe as esy-build-package)
     (fastreplacestring.exe as fastreplacestring)
     ))
