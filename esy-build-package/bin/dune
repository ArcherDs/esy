(executable
  (name esyBuildPackageCommand)
  (flags (:standard (-w -39)))
  (preprocess (pps ppx_let))
  (libraries
            EsyBuildPackage
            cmdliner
            yojson
            bos
            logs
            logs.fmt
            logs.cli
            re
            fmt
            fmt.cli
            fmt.tty
            ppx_deriving_yojson.runtime
            rresult
            )
  )

(rule
 (targets fastreplacestring.exe)
 (action  (run cp
           "%{project_root}/../../node_modules/fastreplacestring/.bin/fastreplacestring.exe"
           %{targets}
           )))

(install
  (package esy-build-package)
  (section bin)
   (files
     (esyBuildPackageCommand.exe as esy-build-package)
     (fastreplacestring.exe as fastreplacestring)
     ))
